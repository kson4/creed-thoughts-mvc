<div class="side2">
  <h3 class="pb-3">Top Reads</h3>
  <h4>Finance</h4>
  <hr class="w-50" />
  <% for(let i = 0; i < finance.length && i < 3; i++) { %>
    <div class="row pb-3">
      <div class="sideimg col-lg-4 col-md-4 col-4">
        <img class="img-fluid" src=<%= finance[i].img %> />
      </div>
      <div class="sidetext col-lg-8 col-md-8 col-8">
        <h4><%= finance[i].title %></h4>
        <a href=/post/<%= finance[i]._id %>>READ MORE</a>
      </div>
    </div>
  <% } %>
  <h4>Just Thoughts</h4>
  <hr class="w-50" />
  <% for(let i = 0; i < justThoughts.length && i < 3; i++) { %>
    <div class="row pb-3">
      <div class="sideimg col-lg-4 col-md-4 col-4">
        <img class="img-fluid" src=<%= justThoughts[i].img %> />
      </div>
      <div class="sidetext col-lg-8 col-md-8 col-8">
        <h4><%= justThoughts[i].title %></h4>
        <a href=/post/<%= justThoughts[i]._id %>>READ MORE</a>
      </div>
    </div>
  <% } %>
</div>