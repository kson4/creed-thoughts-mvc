<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <link rel="stylesheet" href="/css/post.css" />
  </head>
  <body>
    <%- include("./partials/header.ejs") %>

    <div class="container mt-5 pt-4">
      <div class="row">
        <div class="col-lg-8">
          <article>
            <header class="mb-4">
              <!-- title -->
              <h1 class="fw-bolder mb-1"><%= post.title %></h1>
              <!-- date -->
              <div class="text-muted fst-italic mb-2">
                Posted on January 1, 2022 by Start Bootstrap
              </div>
              <!-- category -->
              <% for(let i = 0; i < post.category.length; i++) { %>
                <p class="badge bg-primary"><%= post.category[i] %></p>
              <% } %>
            </header>
            <!-- image -->
            <figure class="mb-4">
              <img class="img-fluid rounded" src=<%= post.img %> />
            </figure>
            <!-- content -->
            <section class="mb-5">
              <% for(let i = 0; i < post.content.length; i++) { %> 
                <% if(post.content[i] != "") { %>
                  <p class="fs-5 mb-4"><%= post.content[i] %></p>
                <% } %>
              <% } %>
            </section>
          </article>

          <!-- Comments section-->
          <!-- <section class="mb-5">
          </section> -->
        </div>
        <!-- Side widgets-->
        <div class="col-lg-4 side-widget">
          <%- include("./partials/side-widget.ejs") %>
        </div>
      </div>
    </div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">
          Â© 2022 Copyright: Creed Thoughts - Creed Bratton
        </p>
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
